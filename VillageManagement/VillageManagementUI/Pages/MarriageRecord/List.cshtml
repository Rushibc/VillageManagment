@page
@model VillageManagementUI.Pages.MarriageRecord.ListModel
@{
    ViewData["Title"] = "Marriage Records";
}

<h2 class="text-center mb-4">📄 Marriage Records</h2>

<form method="get" class="row mb-4">
    <div class="col-md-10">
        <input type="text" name="search" class="form-control" placeholder="Search by Bride or Groom name" value="@Model.SearchTerm" />
    </div>
    <div class="col-md-2 text-end">
        <button type="submit" class="btn btn-success w-100">🔍 Search</button>
    </div>
</form>

@if (Model.MarriageRecords != null && Model.MarriageRecords.Any())
{
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Groom</th>
                <th>Bride</th>
                <th>Date</th>
                <th>Place</th>
                <th>Registered By</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model.MarriageRecords)
            {
                <tr>
                    <td>@record.Id</td>
                    <td>@record.GroomName</td>
                    <td>@record.BrideName</td>
                    <td>@record.MarriageDate.ToShortDateString()</td>
                    <td>@record.PlaceOfMarriage</td>
                    <td>@record.RegisteredBy</td>
                    <td>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@record.Id" onsubmit="return confirm('Are you sure you want to delete this record?');">
                            <button type="submit" class="btn btn-sm btn-danger">🗑️ Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning text-center">No records found.</div>
}
