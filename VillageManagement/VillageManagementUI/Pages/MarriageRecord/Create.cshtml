@page
@model VillageManagementUI.Pages.MarriageRecord.CreateModel

@{
    ViewData["Title"] = "Register Marriage";
}

<h2 class="text-center mb-4">💍 Register Marriage</h2>

<form method="post" class="row g-3 needs-validation" novalidate>
    <div class="col-md-6">
        <label asp-for="MarriageRecord.GroomName" class="form-label">Groom's Name</label>
        <input asp-for="MarriageRecord.GroomName" class="form-control" required />
    </div>

    <div class="col-md-6">
        <label asp-for="MarriageRecord.BrideName" class="form-label">Bride's Name</label>
        <input asp-for="MarriageRecord.BrideName" class="form-control" required />
    </div>

    <div class="col-md-6">
        <label asp-for="MarriageRecord.MarriageDate" class="form-label">Marriage Date</label>
        <input asp-for="MarriageRecord.MarriageDate" type="date" class="form-control" required />
    </div>

    <div class="col-md-6">
        <label asp-for="MarriageRecord.PlaceOfMarriage" class="form-label">Place of Marriage</label>
        <input asp-for="MarriageRecord.PlaceOfMarriage" class="form-control" required />
    </div>
    <div class="col-md-6">
        <label asp-for="MarriageRecord.Witnesses" class="form-label">Witness Name</label>
        <input asp-for="MarriageRecord.Witnesses" class="form-control" required />
    </div>
    <div class="col-md-6">
        <label asp-for="MarriageRecord.Remarks" class="form-label">Remark</label>
        <input asp-for="MarriageRecord.Remarks" class="form-control" required />
    </div>

    <div class="col-12">
        <label asp-for="MarriageRecord.RegisteredBy" class="form-label">Registered By</label>
        <input asp-for="MarriageRecord.RegisteredBy" class="form-control" />
    </div>

    <div class="col-12 text-center mt-3">
        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
    </div>
</form>