@page
@model ListModel
@{
    ViewData["Title"] = "Death Records";
}

<div class="container mt-5">
    <h2 class="mb-4">Death Records</h2>

    <!-- 🔍 Search Form -->
    <form method="get" class="mb-3 d-flex" style="max-width: 500px;">
        <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control me-2" placeholder="Search by name..." />
        <button type="submit" class="btn btn-outline-dark">Search</button>
    </form>

    @if (Model.DeathRecords != null && Model.DeathRecords.Any())
    {
        <table class="table table-bordered table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Date of Death</th>
                    <th>Cause</th>
                    <th>Place</th>
                    <th>Registered By</th>
                    <th style="width: 100px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model.DeathRecords)
                {
                    <tr>
                        <td>@record.Id</td>
                        <td>@record.FullName</td>
                        <td>@record.DateOfDeath.ToString("yyyy-MM-dd")</td>
                        <td>@record.CauseOfDeath</td>
                        <td>@record.PlaceOfDeath</td>
                        <td>@record.RegisteredBy</td>
                        <td>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@record.Id" onsubmit="return confirm('Are you sure you want to delete this record?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No records found.</div>
    }
</div>
