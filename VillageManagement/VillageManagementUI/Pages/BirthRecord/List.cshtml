@page
@model ListModel
@{
    ViewData["Title"] = "Saved Birth Records";
}

<div class="container mt-5">
    <h2 class="mb-4">Saved Birth Records</h2>

    @if (Model.BirthRecords != null && Model.BirthRecords.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Birth Date</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Registered By</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model.BirthRecords)
                    {
                        <tr>
                            <td>@record.Id</td>
                            <td>@record.FullName</td>
                            <td>@record.BirthDate.ToString("yyyy-MM-dd")</td>
                            <td>@record.Gender</td>
                            <td>@record.RegisteredBy</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No birth records found.
        </div>
    }
</div>
